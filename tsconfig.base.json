{  
  "$schema": "https://json.schemastore.org/tsconfig",
  "compileOnSave": false,
  "compilerOptions": {

    //
    "strictNullChecks": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    //
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "baseUrl": ".",
    //
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES6",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,

    "paths": {
      "@redilink/core/*": ["./Context/core"]
    }
  },
  "exclude": [
    "node_modules"  ]

}