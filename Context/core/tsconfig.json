{
  "extends": "@redilink/typescript-configuration/tsconfig.base.json",

  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist",
    "target": "ES6",
    "baseUrl": "./",

    "paths": {
      "@shared/*": ["./shared/*"],
      "@Link/*": ["./Link/*"],
      "@Auth/*": ["./Auth/*"],
    }
  },

  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
  
  "include": ["./Auth/**/*.ts","./Link/**/*.ts","./shared/**/*.ts","./index.ts"],  

}
