{
  "name": "template-node-ts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:backend": "tsnd -r tsconfig-paths/register --respawn src/apps/redilink/backend/src/app",
    "dev:frontend": "pnpm -F \"./src/apps/redilink/frontend\" dev",
    "build": "npm run build:clean && npm run build:compile && npm run build:frontend && npm run copy:frontend",
    "build:clean":"rm -rf dist",
    "build:compile":"tsc && tsc-alias",
    "build:frontend":"npm --prefix ./src/apps/redilink/frontend run build",
    "copy:frontend":"mkdir -p ./dist/apps/redilink/backend/src/public && cp -r ./src/apps/redilink/frontend/dist/* ./dist/apps/redilink/backend/src/public/",
    "start": "node ./dist/apps/redilink/backend/src/app"

  },
