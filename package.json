    "@prisma/client": "5.13.0",
    "bcryptjs": "^2.4.3",
    "prisma": "^5.13.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.1",
    "vitest": "^1.6.0",


    "awilix": "^10.0.2",
    "compression": "^1.7.4",
    "dotenv": "^16.4.5",
    "env-var": "^7.4.2",
    "errorhandler": "^1.5.1",
    "express": "^4.19.2",
    "express-promise-router": "^4.1.1",
    "express-validator": "^7.0.1",
    "glob": "^10.3.12",
    "helmet": "^7.1.0",
