---
import { Logo } from '../components/logo/Logo';
import { Container } from '../components/ui/Container';
import { FormShortener } from '../components/shortener/FormShortener';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">

	<>
  
  
      <Container as="header" className="flex justify-between items-center h-20 px-4  w-full md:w-4/5 md:mx-auto">
        <Logo />
        
        
        <ul class="flex md:gap-8">
          <li>Sign in</li>
          <li class=" bg-accent-100 p-1 rounded-lg px-2 text-text-100">Sign up</li>
        </ul>
      </Container>

      <Container as="main" className="mt-20 w-full px-4 md:w-4/5 md:mx-auto " >
        <>

          <div class="text-center">

          <h1 class="text-5xl text-center font-bold inline-block bg-gradient-to-r from-text-100 via-indigo-200 to-indigo-500  text-transparent bg-clip-text">
            Shorten yours urls
          </h1>
          </div>
        </>
      </Container>

      <Container as="main" className="mt-20 w-full px-4 md:w-4/5 md:mx-auto">
          <FormShortener client:visible></FormShortener>


        </Container>
      </>
</Layout>

